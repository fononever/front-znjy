/**
 * router animation
 */
.fade-enter-active, .fade-leave-active
  transition opacity 0.2s linear

.fade-enter, .fade-leave-to
  opacity 0

.el-dialog
  position absolute
  top 50%
  left 50%
  margin 0 !important
  transform translate(-50%, -50%)
  max-height calc(100% - 30px)
  max-width calc(100% - 30px)
  display flex
  flex-direction column

